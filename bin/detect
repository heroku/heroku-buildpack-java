#!/usr/bin/env bash

set -euo pipefail

BUILD_DIR="${1}"

extensions=(
	"xml"
	"atom"
	"clj"
	"groovy"
	"rb"
	"scala"
	"yaml"
	"yml"
)

for extension in "${extensions[@]}"; do
	if [[ -f "${BUILD_DIR}/pom.${extension}" ]]; then
		echo "Java"
		exit 0
	fi
done

(>&2 echo "Could not find a pom.xml file or other supported POM format!")
exit 1
